<%= render 'background' %>

<h3>博文列表</h3>
<%= link_to '新建博文', new_article_path %>

<table>
  <tr>
    <th>标题</th>
    <th>正文</th>
    <th>更新时间</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= truncate(article.text, separator: ' ') %></td>
      <td><%= article.updated_at.localtime %></td>

      <td><%= link_to '阅读', article_path(article) %></td>
      <td><%= link_to '编辑', edit_article_path(article) %></td>
      <td><%= link_to '删除', article_path(article), method: :delete, data: {confirm: '确定删除吗？' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to '回到主页', controller: 'welcome' %>